{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cloned.dev/schemas/artifact_manifest.schema.json",
  "title": "Artifact Manifest",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "artifact_id": {"type": "string"},
    "pipeline_id": {"type": "string"},
    "created_at": {"type": "string", "format": "date-time"},
    "inputs_hash": {"type": "string"},
    "tool_calls": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "tool_id": {"type": "string"},
          "version": {"type": "string"},
          "envelope_hash": {"type": "string"}
        },
        "required": ["tool_id", "version", "envelope_hash"],
        "additionalProperties": false
      }
    },
    "connector_versions": {"type": "object", "additionalProperties": {"type": "string"}},
    "provenance": {"type": "array", "items": {"type": "string"}},
    "content_hashes": {"type": "object", "additionalProperties": {"type": "string"}}
  },
  "required": ["artifact_id", "pipeline_id", "created_at", "inputs_hash", "tool_calls"]
}

