{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cloned.dev/schemas/registry.schema.json",
  "title": "Cloned Connector Registry",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {"type": "string"},
    "connectors": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": {"type": "string"},
          "version": {"type": "string"},
          "publisher_id": {"type": "string"},
          "signature_status": {"enum": ["verified", "unverified", "revoked"]},
          "package_digest": {"type": "string"},
          "enabled": {"type": "boolean"},
          "installed_at": {"type": "string", "format": "date-time"},
          "provides_capabilities": {"type": "array", "items": {"type": "string"}},
          "requires_capabilities": {"type": "array", "items": {"type": "string"}},
          "tools": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {"type": "string"},
                "version": {"type": "string"},
                "schema_id": {"type": "string"}
              },
              "required": ["id", "version", "schema_id"],
              "additionalProperties": false
            }
          }
        },
        "required": ["id", "version", "publisher_id", "signature_status", "package_digest", "enabled", "tools"]
      }
    }
  },
  "required": ["version", "connectors"]
}

