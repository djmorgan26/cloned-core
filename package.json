{
  "name": "cloned-core",
  "version": "0.1.0",
  "description": "Cloned â€“ local-first agent operating system (core)",
  "license": "MIT",
  "private": true,
  "type": "module",
  "bin": {
    "cloned": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json --watch",
    "start": "node dist/api/server.js",
    "cli": "node dist/cli/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:ci": "node --experimental-vm-modules node_modules/.bin/jest --ci --coverage",
    "schema:validate": "node scripts/validate-schemas.js",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/static": "^7.0.4",
    "@fastify/swagger": "^8.15.0",
    "better-sqlite3": "^9.4.3",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "gray-matter": "^4.0.3",
    "inquirer": "^10.1.8",
    "js-yaml": "^4.1.0",
    "nanoid": "^5.0.7",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.10",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.2.3",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/src/__tests__/**/*.test.ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true,
          "isolatedModules": true,
          "diagnostics": {
            "ignoreCodes": [
              151002
            ]
          }
        }
      ]
    }
  },
  "optionalDependencies": {
    "@azure/identity": "^4.4.0",
    "@azure/keyvault-secrets": "^4.9.0"
  }
}
